{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "name": "AlaaFlatRemixPro",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "background": "#1a1b26",
          "foreground": "#ffffff",
          "leading_diamond": "\ue0b6",
          "template": " \ud83d\udda5\ufe0f  {{ .Icon }} ",
          "properties": {
            "ubuntu": "\uf31b"
          }
        },
        {
          "type": "session",
          "style": "powerline",
          "background": "#2ac3de",
          "foreground": "#1a1b26",
          "powerline_symbol": "\ue0b0",
          "template": " \ud83d\udc64 {{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "background": "#c0caf5",
          "foreground": "#1a1b26",
          "powerline_symbol": "\ue0b0",
          "template": " \uf07c {{ .Path }} ",
          "properties": {
            "style": "agnoster_full"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "background": "#f7768e",
          "foreground": "#1a1b26",
          "powerline_symbol": "\ue0b0",
          "template": " \uf418 {{ .HEAD }}{{ if .Working.Changed }} \u270f\ufe0f {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \u2705 {{ .Staging.String }}{{ end }} "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#41a6b5",
          "foreground": "#ffffff",
          "template": " \ue235 {{ .Venv }} "
        },
        {
            "type": "root",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "background": "#ff5252",
            "foreground": "#ffffff",
            "template": " \u26a0\ufe0f ROOT "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "executiontime",
          "style": "diamond",
          "background": "#1a1b26",
          "foreground": "#e0af68",
          "leading_diamond": "\ue0b6",
          "template": " \u23f1 {{ .FormattedMs }} "
        },
        {
          "type": "status",
          "style": "diamond",
          "background": "{{ if gt .Code 0 }}#ff5252{{ else }}#9ece6a{{ end }}",
          "foreground": "#1a1b26",
          "trailing_diamond": "\ue0b4",
          "template": "{{ if gt .Code 0 }}\u2717{{ else }}\u2714{{ end }}",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}
