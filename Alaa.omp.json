{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "name": "AlaaFlatRemixPro-v4",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "command",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "background": "#44475a",
          "foreground": "#f8f8f2",
          "template": " #{{ .CmdCount }} "
        },
        {
          "type": "os",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#1a1b26",
          "foreground": "#ffffff",
          "template": " \ud83d\udda5\ufe0f  {{ .Icon }} ",
          "properties": {
            "ubuntu": "\uf31b"
          }
        },
        {
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#ff5252",
          "foreground": "#ffffff",
          "template": " \u26a0\ufe0f ROOT "
        },
        {
          "type": "session",
          "style": "powerline",
          "background": "#2ac3de",
          "foreground": "#1a1b26",
          "powerline_symbol": "\ue0b0",
          "template": " \ud83d\udc64 {{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "background": "#c0caf5",
          "foreground": "#1a1b26",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "agnoster_short",
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "~",
            "aliases": {
              "~/Documents": "\uf07b",
              "~/Downloads": "\uf019",
              "~/Music": "\uf001",
              "~/Pictures": "\uf03e",
              "~/Desktop": "\uf108",
              "~/Videos": "\uf03d"
            }
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "background": "#f7768e",
          "foreground": "#1a1b26",
          "powerline_symbol": "\ue0b0",
          "template": " \uf418 {{ .HEAD }}{{ if .UpstreamURL }} {{ .UpstreamIcon }}{{ .Ahead }} â‡£{{ .Behind }}{{ end }}{{ if .Staging.Changed }} \u2705 {{ .Staging.String }}{{ end }}{{ if .Working.Changed }} \u270f\ufe0f {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} "
        },
        {
          "type": "docker",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#ffffff",
          "background": "#0db7ed",
          "template": " \uf308 {{ .Context }} "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#41a6b5",
          "foreground": "#ffffff",
          "template": " \ue235 {{ .Venv }} "
        },
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#1a1b26",
          "background": "#e0af68",
          "template": " {{ if .Charging }}âš¡{{ end }}{{ .Icon }}{{ .Percentage }}% ",
          "properties": {
            "charged_icon": "ðŸ”‹",
            "charging_icon": "ðŸ”Œ",
            "discharging_icon": "ðŸ”‹"
          }
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "sysinfo",
          "style": "plain",
          "foreground": "#c0caf5",
          "template": "\uf2db {{ .CPU.Percentage }}% | \uf85a {{ .RAM.PercentageUsed }}% ",
          "properties": {
            "precision": 0
          }
        },
        {
          "type": "network",
          "style": "plain",
          "foreground": "#82aaff",
          "template": "ó°“… {{ .Down.String }} | ó°“ƒ {{ .Up.String }} "
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "{{ if gt .Code 0 }}#ff5252{{ else }}#9ece6a{{ end }}",
          "template": " {{ if gt .Code 0 }}\u2717 {{ .Code }}{{ else }}\u2714{{ end }} ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ],
  "final_space": true
}
